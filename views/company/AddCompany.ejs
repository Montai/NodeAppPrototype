<!DOCTYPE html>
<head>
    <script src="/public/assets/plugins/jquery.min.js"></script>
    <script type="text/javascript" src="/public/assets/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/public/assets/bootstrap/css/bootstrap.min.css">
    <script type="text/javascript" src="/public/assets/plugins/validator.js"></script>
</head>
<body>
    <h3>Add new Company</h3>
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" name="errorMessage" id="ErrorMessage" value=""/>
            <form data-toggle="validator" novalidate="true" id="AddCompany" name="addCompany">
                <div class="form-body">

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="CompanyName" class="control-label">Company Name</label>
                            <input type="text" data-validate="true" class="form-control" id="CompanyName" name="companyName" maxlength="200" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="Address1" class="control-label">Address 1</label>
                            <input type="text" data-validate="true" class="form-control" id="Address1" name="address1" maxlength="100" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="Address2" class="control-label">Address 2</label>
                            <input type="text" data-validate="true" class="form-control" id="Address2" name="address2" maxlength="100" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="City" class="control-label">City</label>
                            <input type="text" data-validate="true" class="form-control" id="City" name="city" maxlength="50" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="State" class="control-label">State</label>
                            <input type="text" data-validate="true" class="form-control" id="State" name="state" maxlength="50" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="Zip" class="control-label">Zip code</label>
                            <input type="text" data-validate="true" class="form-control" id="Zip" name="zip" maxlength="10" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Country" class="control-label">Country</label>
                            <select class="form-control" id="Country" name="country">
                                <% for(var i=0; i<companies.length; i++) { %>
                                    <% if(companies[i]['nicename'] === "United States") { %>
                                        <option value="<%= companies[i]['nicename'] %>" selected><%= companies[i]['nicename'] %></option>
                                    <% } else { %>
                                        <option value="<%= companies[i]['nicename'] %>"><%= companies[i]['nicename'] %></option>
                                    <% } %>
                                <% } %>
                            </select>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</body>
</html>