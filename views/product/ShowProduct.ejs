    <!-- Load images of products -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="/public/assets/images/<%= productDetails[0].product_image %>" class="img-responsive" alt="">
        </div>
        <div class="col-md-6">
            <div class="">
                <label>Product Name</label>
                <h3><%= productDetails[0].product_name %></h3>
            </div>
            <div class="">
                <label>Product Description</label>
                <h3><%= productDetails[0].product_description %></h3>
            </div>
            <div class="">
                <label>Product Price</label>
                <h3>₹ <%= productDetails[0].product_price %> only</h3> 
            </div>
            <form action="/products/addToCart" id="AddProdsToCart">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-left-minus btn btn-danger btn-number"  data-type="minus" data-field="">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </span>
                            <input type="text" id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="5">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                <br>
                <input type="hidden" id="" name="ProductId" class="" value="<%= productId %>">
                <input type="hidden" id="" name="UserId" class="" value="<%= userId %>">
                <input type="hidden" id="" name="ProductName" class="" value="<%= productDetails[0].product_name %>">
                <input type="hidden" id="" name="ProductDescription" class="" value="<%= productDetails[0].product_description %>">
                <input type="hidden" id="" name="ProductPrice" class="" value="<%= productDetails[0].product_price %>">
                <div class="row">
                    <div class="col-sm-3">
                        <input type="submit" class="btn btn-outline-success" value="Add to Cart">
                    </div>
                </div>
            </form>
        </div>                  

